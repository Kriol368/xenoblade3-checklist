{% extends 'base.html.twig' %}
{% block title %}XC3 Checklist - Food{% endblock %}
{% block body %}
    <h1>Food Items</h1>

    <table>
        <thead>
        <tr>
            <th>Name</th>
            <th>Effects</th>
        </tr>
        </thead>
        <tbody>
        {% for food in foods %}
            <tr class="food-row" data-id="{{ food.id }}" data-name="{{ food.name }}" data-effects="{{ food.effects }}" data-duration="{{ food.duration }}" data-location="{{ food.location }}">
                <td>{{ food.name }}</td>
                <td>{{ food.effects }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <!-- Card for displaying detailed food info -->
    <div id="food-card" class="card" style="display: none;">
        <button id="close-card" class="close-btn">X</button>
        <h2 id="food-name"></h2>
        <p><strong>Effects:</strong> <span id="food-effects"></span></p>
        <p><strong>Duration:</strong> <span id="food-duration"></span></p>
        <p><strong>Location:</strong> <span id="food-location"></span></p>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/food.js') }}"></script>
{% endblock %}
