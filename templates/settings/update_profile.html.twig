{% extends 'base.html.twig' %}

{% block title %}Update Profile{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/settings/settings.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Update Profile</h1>

        {% for message in app.flashes('success') %}
            <div class="alert success">
                {{ message }}
            </div>
        {% endfor %}

        {{ form_start(form) }}
        <div class="form-group">
            <label for="{{ form.name.vars.id }}">{{ form_label(form.name) }}</label>
            {{ form_widget(form.name, { 'attr': {'class': 'input-text'} }) }}
            {{ form_errors(form.name) }}
        </div>

        <div class="form-group">
            <label for="{{ form.email.vars.id }}">{{ form_label(form.email) }}</label>
            {{ form_widget(form.email, { 'attr': {'class': 'input-text'} }) }}
            {{ form_errors(form.email) }}
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
        {{ form_end(form) }}

        <a href="{{ path('app_settings') }}" class="btn btn-secondary mt-3">Back to Settings</a>
    </div>
{% endblock %}
