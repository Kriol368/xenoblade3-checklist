{% extends 'base.html.twig' %}

{% block title %}Ajustes{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/settings/settings.css') }}">
{% endblock %}


{% block body %}

    <div class="settings-content">
        <div class="settings-title">
            <h2>Settings</h2>
        </div>
        <div class="setting">
            <a href="{{ path('app_settings_update') }}">
                <p>Update Profile</p>
            </a>
        </div>
        <div class="setting">
            <a href="{{ path('app_settings_update_password') }}">
                <p>Change Password</p>
            </a>
        </div>
        <div class="setting">
            <a href="{{ path('app_settings') }}">
                <p>Reset Account</p>
            </a>
        </div>
        <div>
            <form action="{{ path('app_settings') }}" method="POST">
                <button type="submit" class="btn btn-danger">Delete Account</button>
            </form>
        </div>
    </div>
{% endblock %}
