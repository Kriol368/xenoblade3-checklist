{% extends 'base.html.twig' %}

{% block title %}Update Password{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/settings/settings.css') }}">
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Update Password</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success custom-alert">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger custom-alert">
                {{ message }}
            </div>
        {% endfor %}

        {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.currentPassword, 'Current Password') }}
            {{ form_widget(form.currentPassword, { 'attr': {'class': 'input-field'} }) }}
            {{ form_errors(form.currentPassword) }}
        </div>

        <div class="form-group">
            {{ form_label(form.newPassword.first, 'New Password') }}
            {{ form_widget(form.newPassword.first, { 'attr': {'class': 'input-field'} }) }}
            {{ form_errors(form.newPassword.first) }}
        </div>

        <div class="form-group">
            {{ form_label(form.newPassword.second, 'Confirm New Password') }}
            {{ form_widget(form.newPassword.second, { 'attr': {'class': 'input-field'} }) }}
            {{ form_errors(form.newPassword.second) }}
        </div>

        {{ form_end(form) }}

        <a href="{{ path('app_settings') }}" class="btn btn-secondary mt-3">Back to Settings</a>
    </div>
{% endblock %}
