<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Project Description">
    <meta name="keywords" content="HTML, CSS, Template">
    <meta name="author" content="Kriol368">
    <title>Log in!</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/security/security.css') }}">
    <link rel="icon" href="{{ asset('favicon.ico') }}" type="image/x-icon">
</head>

<body class="bg-black text-white">
<div class="login-container d-flex justify-content-center align-items-center min-vh-100">
    <div class="login-card p-4" style="max-width: 400px; width: 100%; background-color: #222; border-radius: 10px;">
        <h1 class="h3 mb-4 text-center text-danger">Please sign in</h1>

        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="logged-in-info text-light">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}" class="text-danger">Logout</a>
                </div>
            {% endif %}

            <div class="mb-3">
                <label for="username" class="form-label text-light">Email</label>
                <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-input form-control bg-dark text-light" autocomplete="email" required autofocus>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label text-light">Password</label>
                <input type="password" name="_password" id="password" class="form-input form-control bg-dark text-light" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="remember-me mb-3">
                <label class="text-light">
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>

            <button class="btn btn-danger w-100" type="submit">Sign in</button>

            <div class="register-link mt-3 text-center">
                <a href="{{ path('app_register') }}" class="text-danger">Register</a>
            </div>

            <!-- Back to Home Button -->
            <div class="back-link mt-3 text-center">
                <a href="{{ path('app_home') }}" class="text-danger">Back to Home</a>
            </div>
        </form>
    </div>
</div>
<!-- Bootstrap JS and Popper.js -->
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"></script>
</body>
</html>
