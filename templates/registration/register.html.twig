<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Project Description">
    <meta name="keywords" content="HTML, CSS, Template">
    <meta name="author" content="Kriol368">
    <title>Register!</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/security.css') }}">
    <link rel="icon" href="{{ asset('favicon.ico') }}" type="image/x-icon">
</head>

<body class="bg-black text-white">
<div class="register-container d-flex justify-content-center align-items-center min-vh-100">
    <div class="register-card p-4" style="max-width: 400px; width: 100%; background-color: #222; border-radius: 10px;">
        <h1 class="h3 mb-4 text-center text-danger">Create an Account</h1>

        {{ form_start(registrationForm, { 'attr': {'class': 'form-horizontal'} }) }}

        <div class="mb-3">
            <label for="name" class="form-label text-light">Username</label>
            {{ form_widget(registrationForm.name, { 'attr': {'class': 'form-input form-control bg-dark text-light', 'placeholder': 'Username'} }) }}
        </div>

        <div class="mb-3">
            <label for="email" class="form-label text-light">Email Address</label>
            {{ form_widget(registrationForm.email, { 'attr': {'class': 'form-input form-control bg-dark text-light', 'placeholder': 'Email Address'} }) }}
        </div>

        <div class="mb-3">
            <label for="plainPassword" class="form-label text-light">Password</label>
            {{ form_widget(registrationForm.plainPassword, { 'attr': {'class': 'form-input form-control bg-dark text-light', 'placeholder': 'Password'} }) }}
        </div>

        <div class="terms mb-3">
            {{ form_widget(registrationForm.agreeTerms, { 'attr': {'class': 'form-check-input'} }) }}
            <label for="{{ registrationForm.agreeTerms.vars.id }}" class="form-check-label text-light">
                I agree to the terms and conditions
            </label>
        </div>

        <button type="submit" class="btn btn-danger w-100">Register</button>

        {{ form_end(registrationForm) }}

        <div class="login-link mt-3 text-center">
            <a href="{{ path('app_login') }}" class="text-danger">Already have an account? Sign in</a>
        </div>

        <!-- Back to Home Button -->
        <div class="back-link mt-3 text-center">
            <a href="{{ path('app_home') }}" class="text-danger">Back to Home</a>
        </div>
    </div>
</div>
<!-- Bootstrap JS and Popper.js -->
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"></script>
</body>
</html>
